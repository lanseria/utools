    "format": "npm run format:code",
    "format:code": "prettier --write \"(src)/**/*.(js|ts)\"",
    "test": "jest",
    "coverage": "jest --coverage",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
