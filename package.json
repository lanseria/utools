    "fs-extra": "^10.0.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5",
    "vuepress": "^2.0.0-beta.22"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  }
