{
  "compilerOptions": {
    "paths": {
      "@lanseria/utools": ["./src"]
    },
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "target": "es2018",
    "lib": ["ESNext", "DOM"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts"]
}
